// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id String @id @default(uuid())
  name String
  description String
  salary Float @default(0)
  author String
  workType String
  image String
  location String
  createdAt DateTime @default(now())
}